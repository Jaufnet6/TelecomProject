<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_Panel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#33808F">

            <TextView
                android:id="@+id/title"
                android:layout_width="330dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/trebuc"
                android:gravity="center"
                android:paddingRight="50dp"
                android:text="Welcome"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_menubutton"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/trebuc"
            android:text="Welcome to Telecommunication HES"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="45dp"/>


        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/main_buttons_design"
            android:backgroundTint="#699DD9"
            android:fontFamily="@font/trebuc"
            android:hint="Clients"
            android:textColorHint="#ffffff"
            android:textSize="25sp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/main_buttons_design"
            android:backgroundTint="#326DB2"
            android:fontFamily="@font/trebuc"
            android:hint="Services"
            android:textColorHint="#ffffff"
            android:textSize="25sp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/main_buttons_design"
            android:textColorHint="#ffffff"
            android:hint="Packages"
            android:fontFamily="@font/trebuc"
            android:textSize="25sp"
            android:backgroundTint="#1D4C83"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>

    </LinearLayout>
    
    
    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/nav_header"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#E2E2E2"
        app:itemTextColor="#33808F"
        app:menu="@menu/navigation_items"
        android:layout_gravity="start"
        android:foregroundGravity="center">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />

    </android.support.design.widget.NavigationView>
    

</android.support.v4.widget.DrawerLayout>