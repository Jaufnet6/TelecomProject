<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="507dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <EditText
                android:id="@+id/package_title"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="Name"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/trebuc"
                android:textSize="23sp"
                android:textColor="#000000"
                android:backgroundTint="@android:color/transparent"/>

            <TextView
                android:id="@+id/list_services"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Liste des Services"
                android:gravity="center"
                android:textStyle="normal"
                android:fontFamily="@font/trebuc"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="20dp"/>

            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:orientation="vertical">



            </LinearLayout>


            <Button
                android:id="@+id/add_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/add"/>

            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/discount_field"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Rabais"
                    android:gravity="center"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/discount_edit"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/discount_field"
                    android:hint="Entrez rabais"
                    android:gravity="center"
                    android:fontFamily="@font/trebuc"
                    android:inputType="numberDecimal"
                    android:backgroundTint="#000000"
                    android:layout_marginLeft="20dp" />


                <TextView
                    android:id="@+id/CHF_field"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="CHF"
                    android:gravity="center"
                    android:fontFamily="@font/trebuc"
                    android:layout_toRightOf="@id/discount_edit"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Prix total:  CHF"
                android:gravity="center"
                android:fontFamily="@font/trebuc"
                android:textColor="#000000"
                android:textStyle="italic"
                android:textSize="18sp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="100dp"
                    android:background="@drawable/ic_savebutton" />

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="100dp"
                    android:background="@drawable/ic_cancelbutton" />


            </RelativeLayout>




        </LinearLayout>



    </ScrollView>



</LinearLayout>